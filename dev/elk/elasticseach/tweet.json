{
  "properties": {
    "id": {
      "type": "long",
      "store": true
    },
    "timestamp": {
      "type": "date",
      "format": "epoch_millis",
      "store": true
    },
    "lang": {
      "type": "keyword",
      "store": true
    },
    "text": {
      "type": "text",
      "analyzer": "my_analyzer",
      "store": true,
      "index": true
    },
    "hashtags": {
      "type": "keyword",
      "store": true,
      "index": true
    },
    "geo": {
      "type": "geo_point",
      "store": true
    },
    "city_names": {
      "type": "keyword",
      "store": true,
      "index": true
    },
    "city_coords": {
      "type": "geo_shape",
      "strategy": "recursive",
      "store": true,
      "doc_values": true
    }
  }
}