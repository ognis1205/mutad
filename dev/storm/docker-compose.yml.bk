version: '2'

services:
  zookeeper:
    build: ./zookeeper
    tty: true
  nimbus:
    build: ./nimbus
    links:
      - zookeeper
    tty: true
    ports:
      - 8080:8080
    volumes:
      - './nimbus:/storm'
  supervisor:
    build: ./supervisor
    links:
      - zookeeper
      - nimbus
    tty: true

volumes:
  nimbus: